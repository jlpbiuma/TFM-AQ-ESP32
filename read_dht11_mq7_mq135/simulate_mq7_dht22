//Incluimos la libreria
#include "DHTesp.h"

//Declaración de variables
//Sensors
const int DHT_PIN = 15;
int MQ7_PIN = 32;
int co = 0;


//Instanciamos el DHT22
DHTesp dhtSensor;

void setup() {
  Serial.begin(115200);
  dhtSensor.setup(DHT_PIN, DHTesp::DHT22);
  pinMode(MQ7_PIN, INPUT);

}

void loop() {
//Lectura de CO
  co = analogRead(MQ7_PIN);
//Realizamos el arreglo de datos para la obtención de datos de temperatura y humedad
  TempAndHumidity  data = dhtSensor.getTempAndHumidity();
//Mostramos los datos por pantalla la temperatura y humedad y si estan activos los botones
  Serial.println("Temperatura: " + String(data.temperature, 2) + "°C");
  Serial.println("Humedad: " + String(data.humidity, 1) + "%");
  Serial.println("CO: " + String(co) + " ppm");
  Serial.println("---");


  delay(1000);
}
